<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_decrypt">

    <EditText
        android:id="@+id/enc_text_key_edt"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:background="#FFFF"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:hint="Enter The Secrete Key"
        android:ems="10"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/enc_text_edt"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:background="#FFFF"
        android:layout_alignLeft="@+id/enc_text_key_edt"
        android:layout_below="@+id/enc_text_key_edt"
        android:layout_marginTop="62dp"
        android:hint="Enter secrete text here"
        android:ems="10"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/enc_text_btn"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_below="@+id/enc_text_edt"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button1"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="40dp"
        android:text="Encrypt"
        android:textSize="25dp"
       />

</RelativeLayout>