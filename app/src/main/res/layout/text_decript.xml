<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_decrypt">

    <EditText
        android:id="@+id/dec_text_key_edt"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="#FFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:hint="Enter The Secrete Key"
        android:textStyle="bold"
        android:textColor="#000000"
        android:ems="10" />

    <TextView
        android:id="@+id/dec_text_view"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:background="#FFFF"
        android:layout_alignLeft="@+id/dec_text_key_edt"
        android:layout_below="@+id/dec_text_key_edt"
        android:layout_marginTop="62dp"
        android:hint="Secrete Message Text"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/dec_text_btn"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_below="@+id/dec_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Decrypt"
        android:textSize="25dp"
        android:background="@drawable/button1"
        android:textColor="@android:color/background_light"/>

</RelativeLayout>